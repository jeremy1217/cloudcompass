### Server Configuration ###
# Port for the server to listen on
PORT=5000

### Database Configuration ###
# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/multicloud-assistant

### JWT Authentication ###
# Secret key for JWT token signing (generate a strong random value)
JWT_SECRET=your_jwt_secret_key_here
# JWT token expiration time
JWT_EXPIRE=1d
# API key for non-user API access
API_KEY=your_api_key_here

### Email Configuration ###
# SMTP server for sending emails
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_NAME=Multi-Cloud Assistant
FROM_EMAIL=no-reply@multicloud-assistant.com

### AWS Credentials ###
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

### Azure Credentials ###
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

### GCP Credentials ###
GCP_PROJECT_ID=your_gcp_project_id
GCP_KEY_FILENAME=path/to/gcp-service-account-key.json

### CloudCostIQ Integration ###
CLOUDCOSTIQ_API_KEY=your_cloudcostiq_api_key
CLOUDCOSTIQ_ORG_ID=your_cloudcostiq_org_id
CLOUDCOSTIQ_API_URL=https://api.cloudcostiq.com/v1

### Monitoring Configuration ###
# Frequency for collecting cost metrics (in minutes)
COST_COLLECTION_FREQUENCY=1440
# Frequency for collecting performance metrics (in minutes)
PERFORMANCE_COLLECTION_FREQUENCY=60
# Frequency for collecting utilization metrics (in minutes)
UTILIZATION_COLLECTION_FREQUENCY=360
# Frequency for checking optimization opportunities (in minutes)
OPTIMIZATION_CHECK_FREQUENCY=1440

### Logging Configuration ###
LOG_LEVEL=info
LOG_FILE=logs/app.log